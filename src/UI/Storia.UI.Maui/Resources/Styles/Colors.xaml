<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Cores Principais da Marca -->
    <Color x:Key="Primary">#007ACC</Color>
    <!-- Azul Profissional -->
    <Color x:Key="PrimaryDark">#005A9E</Color>
    <!-- Tom mais escuro para cabe�alhos -->
    <Color x:Key="Secondary">#FDB813</Color>
    <!-- Amarelo/Ouro para acentos e alertas -->

    <!-- Cores de Fundo -->
    <Color x:Key="PageBackgroundColor">#F2F2F7</Color>
    <Color x:Key="CardBackgroundColor">#FFFFFF</Color>

    <!-- Cores de Texto -->
    <Color x:Key="PrimaryTextColor">#1D1D1F</Color>
    <Color x:Key="SecondaryTextColor">#8A8A8E</Color>

    <!-- Cores de Feedback -->
    <Color x:Key="SuccessColor">#34C759</Color>
    <Color x:Key="WarningColor">#FF9500</Color>
    <Color x:Key="ErrorColor">#FF3B30</Color>

    <!-- Cores Neutras -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="LightGray">#E5E5EA</Color>
    <Color x:Key="MidGray">#C7C7CC</Color>
    <Color x:Key="DarkGray">#8E8E93</Color>

</ResourceDictionary>